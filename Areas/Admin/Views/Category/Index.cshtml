@model IEnumerable<Web_1773.Models.Category>
@{
    ViewData["Title"] = "Quản lý danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Quản lý danh mục</h2>
        <a class="btn btn-primary" asp-action="Add">
            <i class="fas fa-plus me-1"></i> Thêm danh mục mới
        </a>
    </div>

    <div class="row g-4">
        @foreach (var category in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="card h-100 shadow-sm border-0 category-card">
                    <div class="card-body d-flex flex-column align-items-center text-center">
                        <div class="category-icon mb-3">
                            <i class="fas fa-folder-open"></i>
                        </div>
                        <h5 class="card-title mb-2">@category.Name</h5>
                        <span class="badge bg-info mb-3">ID: @category.Id</span>
                        <div class="mt-auto d-flex gap-2">
                            <a class="btn btn-sm btn-outline-warning" asp-action="Update" asp-route-id="@category.Id">
                                <i class="fas fa-edit"></i> Sửa
                            </a>
                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@category.Id">
                                <i class="fas fa-trash"></i> Xóa
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
.category-card {
    border-radius: 0.75rem;
    transition: box-shadow 0.3s, transform 0.3s;
}
.category-card:hover {
    box-shadow: 0 8px 24px rgba(0,0,0,0.12);
    transform: translateY(-5px);
}
.category-icon {
    font-size: 2.5rem;
    color: #667eea;
}
.badge {
    font-size: 0.8rem;
    padding: 0.4em 0.7em;
}
@@media (max-width: 767px) {
    .category-icon {
        font-size: 2rem;
    }
}
</style>