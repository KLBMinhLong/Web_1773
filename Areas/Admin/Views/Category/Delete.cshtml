@model Web_1773.Models.Category
@{
    ViewData["Title"] = "Xóa danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Admin" asp-action="Index" class="text-decoration-none">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Category" asp-action="Index" class="text-decoration-none">Danh mục</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Xóa danh mục</li>
                </ol>
            </nav>
            <h1 class="h3 mb-0 text-gradient fw-bold">Xóa danh mục</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6 mx-auto">
            <div class="card border-0 shadow-sm rounded-3 mb-4 warning-card">
                <div class="card-header bg-danger-soft py-3">
                    <h5 class="mb-0 text-danger fw-bold">
                        <i class="fas fa-exclamation-triangle me-2"></i>Xác nhận xóa danh mục
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <div class="delete-icon-container mb-3">
                            <i class="fas fa-trash-alt fa-3x text-danger"></i>
                        </div>
                        <h5 class="fw-bold">Bạn có chắc chắn muốn xóa danh mục này?</h5>
                        <p class="text-muted">Hành động này không thể hoàn tác sau khi thực hiện.</p>
                    </div>

                    <div class="category-info p-3 mb-4 bg-light rounded-3">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-folder fa-2x text-primary me-3"></i>
                            <div>
                                <h6 class="mb-1 fw-bold">@Model.Name</h6>
                                <p class="mb-0 small text-muted">ID: @Model.Id</p>
                            </div>
                        </div>
                    </div>
                    
                    @if (Model.Products != null && Model.Products.Any())
                    {
                        <div class="alert alert-warning border-0 d-flex align-items-center">
                            <i class="fas fa-exclamation-circle text-warning fa-lg me-3"></i>
                            <div>
                                <strong>Cảnh báo:</strong> Danh mục này đang chứa @Model.Products.Count sản phẩm. 
                                Việc xóa có thể ảnh hưởng đến các sản phẩm này.
                            </div>
                        </div>
                    }

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-secondary px-4 py-2">
                                <i class="fas fa-arrow-left me-2"></i>Hủy và quay lại
                            </a>
                            <button type="submit" class="btn btn-danger px-4 py-2">
                                <i class="fas fa-trash-alt me-2"></i>Xác nhận xóa
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Gradient heading */
    .text-gradient {
        background: linear-gradient(45deg, #667eea, #764ba2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    /* Warning card */
    .warning-card {
        position: relative;
        border: none;
    }

    .warning-card::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 4px;
        height: 100%;
        background-color: #dc3545;
        border-radius: 4px 0 0 4px;
    }

    /* Delete icon container */
    .delete-icon-container {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 80px;
        height: 80px;
        background-color: rgba(220, 53, 69, 0.1);
        border-radius: 50%;
    }

    /* Header with danger background */
    .bg-danger-soft {
        background-color: rgba(220, 53, 69, 0.1);
        border-bottom: 1px solid rgba(220, 53, 69, 0.2);
    }

    /* Button styling */
    .btn-danger {
        background-color: #dc3545;
        border: none;
        transition: all 0.3s;
    }

    .btn-danger:hover {
        background-color: #c82333;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(220, 53, 69, 0.3);
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        transition: all 0.3s;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }

    /* Alert styling */
    .alert-warning {
        background-color: rgba(255, 193, 7, 0.15);
        color: #856404;
    }

    /* Text colors */
    .text-primary {
        color: #667eea !important;
    }
    
    .text-danger {
        color: #dc3545 !important;
    }

    .text-warning {
        color: #ffc107 !important;
    }
</style>
