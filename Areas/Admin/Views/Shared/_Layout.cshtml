<!DOCTYPE html>
<html lang="vi" class="h-100">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="ElectroShop - Cửa hàng điện tử uy tín hàng đầu Việt Nam" />
    <title>@ViewData["Title"] - ElectroShop</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" />
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web_1773.styles.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column h-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
            <div class="container-fluid px-3">
                <a class="navbar-brand d-flex align-items-center" asp-area="Admin" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-bolt me-2"></i>
                    <span class="fw-bold">ElectroShop</span>
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center px-3" asp-area="Admin" asp-controller="Home"
                                asp-action="Index">
                                <i class="fas fa-home me-1"></i>
                                <span>Trang chủ</span>
                            </a>
                        </li>
                        <li class="nav-item"></li>
                            <a class="nav-link d-flex align-items-center px-3 text-warning fw-bold" asp-area="Admin"
                                asp-controller="Admin" asp-action="Index">
                                <i class="fas fa-user-shield me-1"></i>
                                <span>Quản trị</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center px-3" asp-area="Admin" asp-controller="Product"
                                asp-action="Index">
                                <i class="fas fa-shopping-bag me-1"></i>
                                <span>Sản phẩm</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center px-3" asp-area="Admin" asp-controller="Category"
                                asp-action="Index">
                                <i class="fas fa-list me-1"></i>
                                <span>Danh mục</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center px-3" asp-area="Admin" asp-controller="Home"
                                asp-action="Privacy">
                                <i class="fas fa-shield-alt me-1"></i>
                                <span>Chính sách</span>
                            </a>
                        </li>
                        <!-- Orders -->
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Orders" asp-action="Index">
                                <i class="fas fa-shopping-cart"></i>
                                <span>Quản lý đơn hàng</span>
                            </a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header> <!-- Main Content with proper spacing for fixed navbar -->
    <main class="flex-grow-1" style="padding-top: 80px;">
        <div class="container-fluid px-3">
            @RenderBody()
        </div>
    </main> <!-- Modern Footer with Bootstrap Grid -->
    <footer class="bg-dark text-light py-5 mt-auto">
        <div class="container">
            <div class="row g-4">
                <!-- Download App Section -->
                <div class="col-lg-3 col-md-6">
                    <div class="footer-section">
                        <h5 class="d-flex align-items-center mb-3">
                            <i class="fas fa-mobile-alt me-2 text-primary"></i>
                            <span>Tải ứng dụng</span>
                        </h5>
                        <p class="text-muted mb-3">
                            Tải ứng dụng ElectroShop cho Android và iOS để mua sắm dễ dàng hơn.
                        </p>
                        <div class="d-flex flex-column gap-2">
                            <img src="https://upload.wikimedia.org/wikipedia/commons/7/78/Google_Play_Store_badge_EN.svg"
                                alt="Google Play" class="img-fluid" style="max-width: 140px;">
                            <img src="https://upload.wikimedia.org/wikipedia/commons/3/3c/Download_on_the_App_Store_Badge.svg"
                                alt="App Store" class="img-fluid" style="max-width: 140px;">
                        </div>
                    </div>
                </div>

                <!-- Company Info -->
                <div class="col-lg-3 col-md-6">
                    <div class="footer-section">
                        <h5 class="d-flex align-items-center mb-3">
                            <i class="fas fa-info-circle me-2 text-primary"></i>
                            <span>Về chúng tôi</span>
                        </h5>
                        <p class="text-muted mb-3">
                            ElectroShop - Cửa hàng điện tử uy tín hàng đầu Việt Nam.
                            Chúng tôi cam kết mang đến những sản phẩm chất lượng với giá cả hợp lý.
                        </p>
                        <div class="contact-info">
                            <p class="mb-2 d-flex align-items-center">
                                <i class="fas fa-map-marker-alt me-2 text-primary"></i>
                                <small>123 Đường ABC, Quận 1, TP.HCM</small>
                            </p>
                            <p class="mb-0 d-flex align-items-center">
                                <i class="fas fa-phone me-2 text-primary"></i>
                                <small>0123 456 789</small>
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Useful Links -->
                <div class="col-lg-3 col-md-6">
                    <div class="footer-section">
                        <h5 class="d-flex align-items-center mb-3">
                            <i class="fas fa-link me-2 text-primary"></i>
                            <span>Liên kết hữu ích</span>
                        </h5>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <a href="#" class="text-decoration-none text-muted d-flex align-items-center">
                                    <i class="fas fa-tag me-2 text-primary small"></i>
                                    <span>Mã giảm giá</span>
                                </a>
                            </li>
                            <li class="mb-2">
                                <a href="#" class="text-decoration-none text-muted d-flex align-items-center">
                                    <i class="fas fa-blog me-2 text-primary small"></i>
                                    <span>Blog công nghệ</span>
                                </a>
                            </li>
                            <li class="mb-2">
                                <a href="#" class="text-decoration-none text-muted d-flex align-items-center">
                                    <i class="fas fa-undo me-2 text-primary small"></i>
                                    <span>Chính sách đổi trả</span>
                                </a>
                            </li>
                            <li class="mb-2">
                                <a href="#" class="text-decoration-none text-muted d-flex align-items-center">
                                    <i class="fas fa-handshake me-2 text-primary small"></i>
                                    <span>Trở thành đối tác</span>
                                </a>
                            </li>
                            <li class="mb-0">
                                <a href="#" class="text-decoration-none text-muted d-flex align-items-center">
                                    <i class="fas fa-headset me-2 text-primary small"></i>
                                    <span>Hỗ trợ khách hàng</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Social Media -->
                <div class="col-lg-3 col-md-6">
                    <div class="footer-section">
                        <h5 class="d-flex align-items-center mb-3">
                            <i class="fas fa-share-alt me-2 text-primary"></i>
                            <span>Theo dõi chúng tôi</span>
                        </h5>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <a href="#" class="text-decoration-none text-muted d-flex align-items-center">
                                    <i class="fab fa-facebook me-2 text-primary"></i>
                                    <span>Facebook</span>
                                </a>
                            </li>
                            <li class="mb-2">
                                <a href="#" class="text-decoration-none text-muted d-flex align-items-center">
                                    <i class="fab fa-twitter me-2 text-primary"></i>
                                    <span>Twitter</span>
                                </a>
                            </li>
                            <li class="mb-2">
                                <a href="#" class="text-decoration-none text-muted d-flex align-items-center">
                                    <i class="fab fa-instagram me-2 text-primary"></i>
                                    <span>Instagram</span>
                                </a>
                            </li>
                            <li class="mb-2">
                                <a href="#" class="text-decoration-none text-muted d-flex align-items-center">
                                    <i class="fab fa-youtube me-2 text-primary"></i>
                                    <span>YouTube</span>
                                </a>
                            </li>
                            <li class="mb-0">
                                <a href="#" class="text-decoration-none text-muted d-flex align-items-center">
                                    <i class="fab fa-tiktok me-2 text-primary"></i>
                                    <span>TikTok</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Footer Bottom -->
            <div class="row mt-4 pt-4 border-top border-secondary">
                <div class="col-12">
                    <div class="text-center">
                        <p class="mb-0 text-muted">
                            © 2025 ElectroShop. Tất cả quyền được bảo lưu.
                            <span class="text-primary fw-semibold">Phát triển bởi MinhLong Codes</span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer> <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.js"></script>
    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
