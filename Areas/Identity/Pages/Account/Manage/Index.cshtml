@page
@model IndexModel
@{
    ViewData["Title"] = "Thông tin cá nhân";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 class="mb-4 text-gradient fw-bold">@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-8">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 rounded-3 p-3 border border-danger-subtle bg-danger-subtle" role="alert"></div>
            
            <div class="mb-4">
                <label asp-for="Username" class="form-label fw-medium">Tên đăng nhập</label>
                <input asp-for="Username" class="form-control form-control-lg" disabled />
            </div>
            
            <div class="mb-4">
                <label asp-for="Input.PhoneNumber" class="form-label fw-medium">Số điện thoại</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-phone"></i></span>
                    <input asp-for="Input.PhoneNumber" class="form-control form-control-lg" />
                </div>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary px-4 py-2">
                <i class="fas fa-save me-2"></i>Lưu thay đổi
            </button>
        </form>
    </div>
</div>

<style>
    .text-gradient {
        background: linear-gradient(45deg, #667eea, #764ba2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    
    .avatar-placeholder {
        width: 100px;
        height: 100px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8f9fa;
        border-radius: 50%;
    }
    
    .text-primary {
        color: #667eea !important;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
